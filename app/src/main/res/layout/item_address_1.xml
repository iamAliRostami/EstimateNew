<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium_dp"
    android:background="@drawable/border_blue_3"
    android:padding="@dimen/medium_dp">

    <LinearLayout
        android:id="@+id/linear_layout_1"
        style="@style/ListItemLine">

        <TextView
            android:id="@+id/text_view_name"
            style="@style/ListItemTextView" />

        <View style="@style/ListItemViewVertical" />

        <TextView
            android:id="@+id/text_view_examination_day"
            style="@style/ListItemTextView" />

        <View style="@style/ListItemViewVertical" />

        <TextView
            android:id="@+id/text_view_service_group"
            style="@style/ListItemTextView" />
    </LinearLayout>

    <View
        android:id="@+id/view_1"
        style="@style/ListItemViewHorizontal"
        android:layout_below="@+id/linear_layout_1" />

    <LinearLayout
        android:id="@+id/linear_layout_2"
        style="@style/ListItemLine"
        android:layout_below="@id/view_1">

        <TextView
            android:id="@+id/text_view_peymayesh"
            style="@style/ListItemTextView" />

        <View style="@style/ListItemViewVertical" />

        <TextView
            android:id="@+id/text_view_notification_mobile"
            style="@style/ListItemTextView" />

        <View style="@style/ListItemViewVertical" />

        <TextView
            android:id="@+id/text_view_moshtarak_mobile"
            style="@style/ListItemTextView" />
    </LinearLayout>

    <View
        android:id="@+id/view_2"
        style="@style/ListItemViewHorizontal"
        android:layout_below="@id/linear_layout_2" />

    <TextView
        android:id="@+id/text_view_address"
        style="@style/ListItemTextView"
        android:layout_width="match_parent"
        android:layout_below="@id/view_2" />

    <View
        android:id="@+id/view_3"
        style="@style/ListItemViewHorizontal"
        android:layout_below="@id/text_view_address" />

    <LinearLayout

        android:id="@+id/linear_layout_3"
        style="@style/ListItemLine"
        android:layout_below="@id/view_3">

        <TextView
            android:id="@+id/text_view_radif_title"
            style="@style/ListItemTextView"
            android:text="@string/radif" />

        <View style="@style/ListItemViewVertical" />

        <TextView
            android:id="@+id/text_view_track_number_title"
            style="@style/ListItemTextView"
            android:text="@string/shomare_peygiri" />

        <View style="@style/ListItemViewVertical" />

        <TextView
            android:id="@+id/text_view_bill_id_title"
            style="@style/ListItemTextView"
            android:text="@string/bill_id" />

    </LinearLayout>

    <View
        android:id="@+id/view_5"
        style="@style/ListItemViewHorizontal"
        android:layout_below="@id/linear_layout_3" />

    <LinearLayout
        style="@style/ListItemLine"
        android:layout_below="@id/view_5">

        <TextView
            android:id="@+id/text_view_radif"
            style="@style/ListItemTextView" />

        <View style="@style/ListItemViewVertical" />

        <TextView
            android:id="@+id/text_view_track_number"
            style="@style/ListItemTextView" />

        <View style="@style/ListItemViewVertical" />

        <TextView
            android:id="@+id/text_view_bill_id"
            style="@style/ListItemTextView" />
    </LinearLayout>

</RelativeLayout>